@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="d-flex justify-content-center align-items-center py-5">

    <div class="card shadow-sm border-0 p-4" style="max-width: 420px; width:100%; border-radius:14px;">

        <div class="text-center mb-4">
            <h3 class="fw-semibold mb-1">Welcome back</h3>
            <p class="text-muted small mb-0">Log in to your account</p>
        </div>

        <form id="account" method="post">

            <div asp-validation-summary="ModelOnly" class="text-danger small mb-3" role="alert"></div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Email"
                       class="form-control"
                       autocomplete="username"
                       placeholder="name@example.com" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger small"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Password"
                       class="form-control"
                       autocomplete="current-password"
                       placeholder="password" />
                <label asp-for="Input.Password">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger small"></span>
            </div>

            <div class="form-check mb-3">
                <input class="form-check-input" asp-for="Input.RememberMe" />
                <label class="form-check-label" asp-for="Input.RememberMe">
                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                </label>
            </div>

            <button id="login-submit" type="submit" class="btn btn-dark w-100 mb-3">
                Log in
            </button>

            <div class="text-center small">
                <div class="mb-1">
                    <a asp-page="./ForgotPassword">Forgot password?</a>
                </div>
                <div class="mb-1">
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">
                        Create an account
                    </a>
                </div>
                <div>
                    <a asp-page="./ResendEmailConfirmation">Resend confirmation email</a>
                </div>
            </div>

            @if ((Model.ExternalLogins?.Count ?? 0) > 0)
            {
                <hr class="my-4" />

                <form id="external-account"
                      asp-page="./ExternalLogin"
                      asp-route-returnUrl="@Model.ReturnUrl"
                      method="post">

                    <div class="d-grid gap-2">
                        @foreach (var provider in Model.ExternalLogins!)
                        {
                            <button type="submit"
                                    class="btn btn-outline-secondary btn-sm"
                                    name="provider"
                                    value="@provider.Name">
                                Continue with @provider.DisplayName
                            </button>
                        }
                    </div>

                </form>
            }

        </form>

    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
