@model VideoGameStore.ViewModels.PublicGamesViewModel

@{
    ViewData["Title"] = "Games";
}

<h1 class="mb-4">Games</h1>

<form method="get" asp-action="Public" class="mb-4">
    <div class="row g-3 align-items-end">

        <div class="col-md-4">
            <label>Category</label>
            <select name="categoryId" class="form-select">
                <option value="">All</option>
                @foreach (var c in Model.Categories)
                {
                    <option value="@c.Id" selected="@(c.Id == Model.SelectedCategoryId)">
                        @c.Name
                    </option>
                }
            </select>
        </div>

        <div class="col-md-4">
            <label>Developer</label>
            <select name="developerId" class="form-select">
                <option value="">All</option>
                @foreach (var d in Model.Developers)
                {
                    <option value="@d.Id" selected="@(d.Id == Model.SelectedDeveloperId)">
                        @d.Name
                    </option>
                }
            </select>
        </div>

        <div class="col-md-2">
            <button class="btn btn-primary w-100">Filter</button>
        </div>

    </div>
</form>



<div class="row row-cols-1 row-cols-md-4 g-4">
    @foreach (var game in Model.Games)
    {
        <div class="col">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">@game.Title</h5>

                    <p class="card-text">
                        <strong>Developer:</strong>
                        @game.Developer?.Name
                    </p>

                    <p class="card-text">
                        <strong>Categories:</strong><br />
                        @string.Join(", ",
                        game.GameCategories.Select(gc => gc.Category.Name))
                    </p>

                @if (game.Price.HasValue)
                    {
                        <p class="card-text">
                            <strong>Price:</strong>
                            @game.Price.Value.ToString("0.00")
                        </p>
                    }
                </div>
                <div class="mt-auto text-end">
                    <small class="text-muted">
                        Released:
                        <strong>@(game.IsPublished ? "Yes" : "No")</strong>
                    </small>
                </div>
            </div>
        </div>
    }
</div>

@if (Model.TotalPages > 1)
{
    <nav class="mt-4">
        <ul class="pagination justify-content-center">
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                    <a class="page-link"
                       asp-action="Public"
                       asp-route-page="@i"
                       asp-route-categoryId="@Model.SelectedCategoryId"
                       asp-route-developerId="@Model.SelectedDeveloperId">
                        @i
                    </a>
                </li>
            }
        </ul>
    </nav>
}
